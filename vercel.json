
{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.18.0",
      "memory": 1024,
      "maxDuration": 15
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "src/index.ts"
    },
    {
      "source": "/core/:path*",
      "destination": "src/index.ts"
    },
    {
      "source": "/health",
      "destination": "src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "trailingSlash": false
}
