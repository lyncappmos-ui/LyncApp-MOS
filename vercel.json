
{
  "version": 2,
  "functions": {
    "src/index.ts": {
      "runtime": "nodejs24.x",
      "memory": 1024,
      "maxDuration": 15
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "src/index.ts"
    },
    {
      "source": "/core/:path*",
      "destination": "src/index.ts"
    },
    {
      "source": "/health",
      "destination": "src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "trailingSlash": false
}
